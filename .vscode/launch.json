{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/bin/Debug/net8.0/Nerdle.dll",
            "args": "${input:qty} ${input:symbols}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "inputs": [
        {
            "id": "qty",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "qty",
                "description": "Word Length",
                "default": "5",
            }
        },
        {
            "id": "symbols",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "symbols",
                "description": "Build mode",
                "options": ["ABCDE", "ABCDEFGHIJKLMNOPQRSTUVWXYZ", "1234567890+-*/=", "1234567890+-*/()²³="],
            }
        }
    ]
}
