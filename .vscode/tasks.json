{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Nerdle.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Nerdle.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-p:PublishTrimmed=true",
                "-p:PublishSingleFile=true",
                "-p:PublishReadyToRun=true",
                "--self-contained",
                "--framework",
                "net8.0",
                "--runtime",
                "${input:os}-${input:arch}",
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Nerdle.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "args": [
                "run",
                "--configuration",
                "${input:configuration}",
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            },
            "runOptions": {
                "instanceLimit": 1000, // big number for no limit
            }
        },
    ],
    "inputs": [
        {
            "id": "configuration",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "configuration",
                "description": "Build mode",
                "options": ["Debug", "Release"],
                "default": "Release",
            }
        },
        {
            "id": "os",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "os",
                "description": "OS",
                "options": ["linux", "win"],
            }
        },
        {
            "id": "arch",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "arch",
                "description": "Architecture",
                "options": ["x64", "arm64"],
            }
        },
    ]
}
