{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/Nerdle.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/Nerdle.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/Nerdle.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "run",
            "command": "dotnet",
            "args": [
                "run",
                "--configuration",
                "${input:configuration}",
                "--",
                "${input:qty}",
                "${input:symbols}",
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            },
            "runOptions": {
                "instanceLimit": 1000, // big number for no limit
            }
        },
        {
            "label": "run with dictionary",
            "command": "dotnet",
            "args": [
                "run",
                "--configuration",
                "${input:configuration}",
                "--",
                "${input:qty}",
                "ABCDEFGHIJKLMNOPQRSTUVWXYZ",
                "${input:pickSingleFile}",
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            },
            "runOptions": {
                "instanceLimit": 1000, // big number for no limit
            }
        },
        {
            "label": "run output.json",
            "command": "dotnet",
            "args": [
                "run",
                "--configuration",
                "${input:configuration}",
            ],
            "type": "process",
            "problemMatcher": "$msCompile",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
            },
            "runOptions": {
                "instanceLimit": 1000, // big number for no limit
            }
        },
    ],
    "inputs": [
        {
            "id": "qty",
            "type": "command",
            "command": "memento.promptString",
            "args": {
                "id": "qty",
                "description": "Word Length",
                "default": "5",
            }
        },
        {
            "id": "symbols",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "symbols",
                "description": "Available symbols",
                "options": ["ABCDEFGHIJKLMNOPQRSTUVWXYZ", "1234567890+-*/=", "1234567890+-*/()²³="],
            }
        },
        {
            "id": "configuration",
            "type": "command",
            "command": "memento.pickString",
            "args": {
                "id": "configuration",
                "description": "Build mode",
                "options": ["Debug", "Release"],
                "default": "Release",
            }
        },
        {
            "id": "pickSingleFile",
            "type": "command",
            "command": "launch-file-picker.pick",
            "args": {
                "filterExt": ".txt",
                "canChangeFolder": true,
            }
         }
    ]
}
